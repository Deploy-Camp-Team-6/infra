version: '3.8'
services:
  mailcow:
    image: docker.io/mailcow/mailcow-dockerized:latest
    env_file: {{ docker_data_dir }}/mailserver/config/mailserver.env
    volumes:
      - {{ docker_data_dir }}/mailserver/data:/var/lib/mailcow
    ports:
      - "25:25"
      - "587:587"
      - "993:993"
    deploy:
      replicas: 1
      restart_policy:
        condition: on-failure
